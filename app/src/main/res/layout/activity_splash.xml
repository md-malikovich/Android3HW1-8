<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/splash_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/weather3"/>

    <TextView
        android:id="@+id/splash_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:textSize="@dimen/text_size_16"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_top_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_imageView"/>

    <TextView
        android:id="@+id/splash_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/malikovich"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/colorDark"
        android:layout_marginTop="@dimen/margin_top_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_textView1"/>

</androidx.constraintlayout.widget.ConstraintLayout>