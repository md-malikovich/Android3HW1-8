<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgForecastIcon"
        android:layout_width="@dimen/img_width_50"
        android:layout_height="@dimen/img_height_50"
        android:src="@drawable/ic_littlecloud"/>

    <TextView
        android:id="@+id/tvForecastDay"
        tools:text="30"
        android:textSize="@dimen/text_size_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvForecastMaxTemp"
        tools:text="30"
        android:textSize="@dimen/text_size_25"
        android:layout_marginTop="@dimen/margin_top_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvForecastMinTemp"
        tools:text="30"
        android:textSize="@dimen/text_size_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>